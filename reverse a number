#include <stdio.h>
int main()
{   
    int n, reversedNumber = 0, remainder;   /*variable */
    printf("Enter an integer: ");
    scanf("%d", &n);
    while(n != 0)    /*loop for reversing entered number */
    {
        remainder = n%10;
        reversedNumber = reversedNumber*10 + remainder;
        n /= 10;
    }
    printf("Reversed Number = %d", reversedNumber);   /*printing result */
    return 0;
}
